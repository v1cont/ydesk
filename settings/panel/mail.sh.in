#! /bin/bash
# -*- mode: sh -*-

TEXTDOMAIN=@GETTEXT_PACKAGE@
TEXTDOMAINDIR=@prefix@/share/locale

res=$(mktemp --tmpdir=/tmp/ydesk mail.XXXXXXXX)
trap "rm -f $res" EXIT

yad --title=$"Mail applet" --window-icon="application-x-addon" --width=300 \
    --image=mail-send --text=$"Mail applet configuration" --separator=" " --form \
    --field=$"Mail check time::NUM" "$(gsettings get ydesk.applets mail_time)" > $res

if [[ $? -eq 0 ]]; then
    eval r=($(< $res))

    gsettings set ydesk.applets mail_tine "${r[0]}"
fi
